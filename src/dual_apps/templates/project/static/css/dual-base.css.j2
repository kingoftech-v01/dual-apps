/* HTMX Loading Indicator */
.htmx-indicator {
    opacity: 0;
    transition: opacity 200ms ease-in;
}

.htmx-request .htmx-indicator {
    opacity: 1;
}

.htmx-request.htmx-indicator {
    opacity: 1;
}

/* Loading animation */
@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: .5; }
}

.htmx-request .htmx-indicator {
    animation: pulse 1s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

/* Swap animations */
.htmx-swapping {
    opacity: 0;
    transition: opacity 200ms ease-out;
}

.htmx-settling {
    opacity: 1;
    transition: opacity 200ms ease-in;
}

/* Table styles */
.dual-table {
    @apply min-w-full divide-y divide-gray-200;
}

.dual-table th {
    @apply px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider;
}

.dual-table td {
    @apply px-6 py-4 whitespace-nowrap text-sm text-gray-900;
}

.dual-table tbody tr:hover {
    @apply bg-gray-50;
}

/* Form styles */
.dual-input {
    @apply block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm;
}

.dual-label {
    @apply block text-sm font-medium text-gray-700 mb-1;
}

.dual-error {
    @apply text-sm text-red-600 mt-1;
}

/* Button styles */
.dual-btn {
    @apply inline-flex items-center px-4 py-2 border text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2;
}

.dual-btn-primary {
    @apply dual-btn border-transparent shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:ring-indigo-500;
}

.dual-btn-secondary {
    @apply dual-btn border-gray-300 text-gray-700 bg-white hover:bg-gray-50 focus:ring-indigo-500;
}

.dual-btn-danger {
    @apply dual-btn border-transparent shadow-sm text-white bg-red-600 hover:bg-red-700 focus:ring-red-500;
}

/* Card styles */
.dual-card {
    @apply bg-white shadow rounded-lg overflow-hidden;
}

.dual-card-header {
    @apply px-6 py-4 border-b border-gray-200;
}

.dual-card-body {
    @apply px-6 py-4;
}

.dual-card-footer {
    @apply px-6 py-4 bg-gray-50 border-t border-gray-200;
}

/* Badge styles */
.dual-badge {
    @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
}

.dual-badge-success {
    @apply dual-badge bg-green-100 text-green-800;
}

.dual-badge-warning {
    @apply dual-badge bg-yellow-100 text-yellow-800;
}

.dual-badge-danger {
    @apply dual-badge bg-red-100 text-red-800;
}

.dual-badge-info {
    @apply dual-badge bg-blue-100 text-blue-800;
}

/* Pagination */
.dual-pagination {
    @apply flex items-center justify-between border-t border-gray-200 px-4 py-3 sm:px-6;
}

.dual-pagination-btn {
    @apply relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50;
}

.dual-pagination-btn-active {
    @apply z-10 bg-indigo-50 border-indigo-500 text-indigo-600;
}
