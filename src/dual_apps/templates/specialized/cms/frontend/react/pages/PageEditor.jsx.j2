import { useState, useEffect } from 'react';
import { useParams, useNavigate } from 'react-router-dom';
import api from '../utils/api';
import { useToast } from '../context/ToastContext';

export default function PageEditor() {
  const { id } = useParams();
  const navigate = useNavigate();
  const { showToast } = useToast();
  const isEditing = Boolean(id);

  const [loading, setLoading] = useState(isEditing);
  const [saving, setSaving] = useState(false);
  const [activeTab, setActiveTab] = useState('visual');

  const [page, setPage] = useState({
    title: '',
    slug: '',
    content: '',
    status: 'draft',
    template: 'default',
    meta_title: '',
    meta_description: '',
    noindex: false,
    publish_date: ''
  });

  useEffect(() => {
    if (isEditing) {
      fetchPage();
    }
  }, [id]);

  const fetchPage = async () => {
    try {
      const response = await api.get(`/api/cms/pages/${id}/`);
      setPage(response.data);
    } catch (error) {
      showToast('Failed to load page', 'error');
      navigate('/admin/pages');
    } finally {
      setLoading(false);
    }
  };

  const handleChange = (field, value) => {
    setPage(prev => ({ ...prev, [field]: value }));

    // Auto-generate slug from title
    if (field === 'title' && !isEditing && !page.slug) {
      const slug = value
        .toLowerCase()
        .replace(/[^a-z0-9]+/g, '-')
        .replace(/(^-|-$)/g, '');
      setPage(prev => ({ ...prev, slug }));
    }
  };

  const handleSubmit = async (e, asDraft = false) => {
    e?.preventDefault();
    setSaving(true);

    const data = {
      ...page,
      status: asDraft ? 'draft' : page.status
    };

    try {
      if (isEditing) {
        await api.put(`/api/cms/pages/${id}/`, data);
        showToast('Page updated successfully', 'success');
      } else {
        const response = await api.post('/api/cms/pages/', data);
        showToast('Page created successfully', 'success');
        navigate(`/admin/pages/${response.data.id}/edit`);
      }
    } catch (error) {
      showToast(error.response?.data?.detail || 'Failed to save page', 'error');
    } finally {
      setSaving(false);
    }
  };

  const generateSlug = async () => {
    if (!page.title) return;
    try {
      const response = await api.post('/api/cms/generate-slug/', { title: page.title });
      setPage(prev => ({ ...prev, slug: response.data.slug }));
    } catch (error) {
      // Use local generation as fallback
      const slug = page.title.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
      setPage(prev => ({ ...prev, slug }));
    }
  };

  const generateSEO = async () => {
    if (!page.title || !page.content) {
      showToast('Need title and content to generate SEO', 'warning');
      return;
    }
    try {
      const response = await api.post('/api/cms/generate-seo/', {
        title: page.title,
        content: page.content
      });
      setPage(prev => ({
        ...prev,
        meta_title: response.data.meta_title,
        meta_description: response.data.meta_description
      }));
      showToast('SEO generated', 'success');
    } catch (error) {
      showToast('Failed to generate SEO', 'error');
    }
  };

  if (loading) {
    return (
      <div className="text-center py-5">
        <div className="spinner-border text-primary"></div>
      </div>
    );
  }

  return (
    <form onSubmit={handleSubmit}>
      <div className="d-flex justify-content-between align-items-center mb-4">
        <h1 className="h3 mb-0">{isEditing ? 'Edit Page' : 'Create Page'}</h1>
        <div>
          {isEditing && (
            <a href={`/${page.slug}`} target="_blank" className="btn btn-outline-secondary me-2">
              Preview
            </a>
          )}
          <button
            type="button"
            className="btn btn-outline-secondary me-2"
            onClick={(e) => handleSubmit(e, true)}
            disabled={saving}
          >
            Save Draft
          </button>
          <button type="submit" className="btn btn-primary" disabled={saving}>
            {saving ? (
              <>
                <span className="spinner-border spinner-border-sm me-2"></span>
                Saving...
              </>
            ) : (
              isEditing ? 'Update' : 'Publish'
            )}
          </button>
        </div>
      </div>

      <div className="row">
        <div className="col-lg-8">
          {/* Title & Slug */}
          <div className="card mb-4">
            <div className="card-body">
              <div className="mb-3">
                <label className="form-label">Title</label>
                <input
                  type="text"
                  className="form-control form-control-lg"
                  value={page.title}
                  onChange={(e) => handleChange('title', e.target.value)}
                  onBlur={generateSlug}
                  required
                />
              </div>
              <div className="mb-3">
                <label className="form-label">Slug</label>
                <div className="input-group">
                  <span className="input-group-text">/</span>
                  <input
                    type="text"
                    className="form-control"
                    value={page.slug}
                    onChange={(e) => handleChange('slug', e.target.value)}
                    pattern="[a-z0-9-]+"
                  />
                </div>
              </div>
            </div>
          </div>

          {/* Content Editor */}
          <div className="card mb-4">
            <div className="card-header">
              <ul className="nav nav-tabs card-header-tabs">
                <li className="nav-item">
                  <button
                    type="button"
                    className={`nav-link ${activeTab === 'visual' ? 'active' : ''}`}
                    onClick={() => setActiveTab('visual')}
                  >
                    Visual
                  </button>
                </li>
                <li className="nav-item">
                  <button
                    type="button"
                    className={`nav-link ${activeTab === 'html' ? 'active' : ''}`}
                    onClick={() => setActiveTab('html')}
                  >
                    HTML
                  </button>
                </li>
              </ul>
            </div>
            <div className="card-body">
              {activeTab === 'visual' ? (
                <div
                  className="form-control"
                  contentEditable
                  style={% raw %}{{ minHeight: 400 }}{% endraw %}
                  dangerouslySetInnerHTML={% raw %}{{ __html: page.content }}{% endraw %}
                  onBlur={(e) => handleChange('content', e.target.innerHTML)}
                />
              ) : (
                <textarea
                  className="form-control font-monospace"
                  rows="20"
                  value={page.content}
                  onChange={(e) => handleChange('content', e.target.value)}
                />
              )}
            </div>
          </div>

          {/* SEO Settings */}
          <div className="card mb-4">
            <div className="card-header d-flex justify-content-between align-items-center">
              <h6 className="mb-0">SEO Settings</h6>
              <button type="button" className="btn btn-sm btn-outline-primary" onClick={generateSEO}>
                <i className="bi bi-magic me-1"></i> Auto-generate
              </button>
            </div>
            <div className="card-body">
              <div className="mb-3">
                <label className="form-label">Meta Title</label>
                <input
                  type="text"
                  className="form-control"
                  value={page.meta_title}
                  onChange={(e) => handleChange('meta_title', e.target.value)}
                  maxLength={60}
                />
                <small className="text-muted">{page.meta_title.length}/60 characters</small>
              </div>
              <div className="mb-3">
                <label className="form-label">Meta Description</label>
                <textarea
                  className="form-control"
                  rows="2"
                  value={page.meta_description}
                  onChange={(e) => handleChange('meta_description', e.target.value)}
                  maxLength={160}
                />
                <small className="text-muted">{page.meta_description.length}/160 characters</small>
              </div>

              {/* SEO Preview */}
              <div className="border rounded p-3 bg-light">
                <div className="text-primary small">example.com/{page.slug || 'page-url'}</div>
                <div className="text-primary h6 mb-1">{page.meta_title || page.title || 'Page Title'}</div>
                <div className="text-muted small">{page.meta_description || 'Page description will appear here...'}</div>
              </div>

              <div className="form-check mt-3">
                <input
                  type="checkbox"
                  className="form-check-input"
                  checked={page.noindex}
                  onChange={(e) => handleChange('noindex', e.target.checked)}
                />
                <label className="form-check-label">Don't index this page (noindex)</label>
              </div>
            </div>
          </div>
        </div>

        <div className="col-lg-4">
          {/* Publish Settings */}
          <div className="card mb-4">
            <div className="card-header">
              <h6 className="mb-0">Publish Settings</h6>
            </div>
            <div className="card-body">
              <div className="mb-3">
                <label className="form-label">Status</label>
                <select
                  className="form-select"
                  value={page.status}
                  onChange={(e) => handleChange('status', e.target.value)}
                >
                  <option value="draft">Draft</option>
                  <option value="published">Published</option>
                  <option value="scheduled">Scheduled</option>
                </select>
              </div>
              {page.status === 'scheduled' && (
                <div className="mb-3">
                  <label className="form-label">Publish Date</label>
                  <input
                    type="datetime-local"
                    className="form-control"
                    value={page.publish_date}
                    onChange={(e) => handleChange('publish_date', e.target.value)}
                  />
                </div>
              )}
              <div className="mb-3">
                <label className="form-label">Page Template</label>
                <select
                  className="form-select"
                  value={page.template}
                  onChange={(e) => handleChange('template', e.target.value)}
                >
                  <option value="default">Default</option>
                  <option value="full-width">Full Width</option>
                  <option value="sidebar-left">Sidebar Left</option>
                  <option value="sidebar-right">Sidebar Right</option>
                  <option value="landing">Landing Page</option>
                </select>
              </div>
            </div>
          </div>

          {/* Featured Image */}
          <div className="card mb-4">
            <div className="card-header">
              <h6 className="mb-0">Featured Image</h6>
            </div>
            <div className="card-body">
              {page.featured_image && (
                <img src={page.featured_image} className="img-fluid rounded mb-3" alt="" />
              )}
              <input type="file" className="form-control" accept="image/*" />
            </div>
          </div>
        </div>
      </div>
    </form>
  );
}
