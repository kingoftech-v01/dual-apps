{% raw %}{% extends "booking/base_booking.html" %}

{% block title %}Book {{ service.name }} - {{ project_name_display }}{% endblock %}

{% block booking_content %}
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{% url 'booking:services' %}">Services</a></li>
        <li class="breadcrumb-item"><a href="{% url 'booking:service_detail' service.slug %}">{{ service.name }}</a></li>
        <li class="breadcrumb-item active">Book</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Select Date & Time</h5>
            </div>
            <div class="card-body">
                <form method="post" id="booking-form"
                      hx-post="{% url 'booking:book' service.slug %}"
                      hx-target="#booking-result"
                      hx-swap="innerHTML">
                    {% csrf_token %}
                    <input type="hidden" name="service" value="{{ service.pk }}">

                    <!-- Staff Selection -->
                    {% if staff_members.count > 1 %}
                    <div class="mb-4">
                        <label class="form-label">Select Staff (Optional)</label>
                        <div class="row" id="staff-selection">
                            <div class="col-md-4 mb-2">
                                <label class="card h-100 staff-card">
                                    <input type="radio" name="staff" value="" class="d-none"
                                           hx-get="{% url 'booking:time_slots' service.slug %}"
                                           hx-trigger="change"
                                           hx-target="#time-slots"
                                           hx-include="[name='date']"
                                           checked>
                                    <div class="card-body text-center">
                                        <div class="mb-2" style="font-size: 2rem;">ðŸ‘¤</div>
                                        <strong>Any Available</strong>
                                    </div>
                                </label>
                            </div>
                            {% for staff in staff_members %}
                            <div class="col-md-4 mb-2">
                                <label class="card h-100 staff-card">
                                    <input type="radio" name="staff" value="{{ staff.pk }}" class="d-none"
                                           hx-get="{% url 'booking:time_slots' service.slug %}"
                                           hx-trigger="change"
                                           hx-target="#time-slots"
                                           hx-include="[name='date']">
                                    <div class="card-body text-center">
                                        {% if staff.avatar %}
                                        <img src="{{ staff.avatar.url }}" class="rounded-circle mb-2"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                        {% else %}
                                        <div class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center mb-2"
                                             style="width: 60px; height: 60px;">{{ staff.name|first }}</div>
                                        {% endif %}
                                        <strong class="d-block">{{ staff.name }}</strong>
                                        <small class="text-muted">{{ staff.title }}</small>
                                    </div>
                                </label>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}

                    <!-- Date Selection -->
                    <div class="mb-4">
                        <label class="form-label">Select Date</label>
                        <input type="text" id="booking-date" name="date" class="form-control" required
                               placeholder="Click to select date"
                               hx-get="{% url 'booking:time_slots' service.slug %}"
                               hx-trigger="change"
                               hx-target="#time-slots-container"
                               hx-include="[name='staff']">
                    </div>

                    <!-- Time Slots -->
                    <div class="mb-4" id="time-slots-container">
                        <label class="form-label">Available Times</label>
                        <div id="time-slots" class="d-flex flex-wrap gap-2">
                            <p class="text-muted">Select a date to see available times</p>
                        </div>
                        <input type="hidden" name="time_slot" id="selected-time">
                    </div>

                    <!-- Contact Information -->
                    <h5 class="mt-5 mb-3">Your Information</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">First Name *</label>
                            <input type="text" name="first_name" class="form-control" required
                                   value="{{ user.first_name|default:'' }}"
                                   hx-post="{% url 'booking:validate_field' %}"
                                   hx-trigger="blur"
                                   hx-target="next .invalid-feedback"
                                   hx-swap="innerHTML">
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Last Name *</label>
                            <input type="text" name="last_name" class="form-control" required
                                   value="{{ user.last_name|default:'' }}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email *</label>
                            <input type="email" name="email" class="form-control" required
                                   value="{{ user.email|default:'' }}"
                                   hx-post="{% url 'booking:validate_field' %}"
                                   hx-trigger="blur"
                                   hx-target="next .invalid-feedback">
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Phone *</label>
                            <input type="tel" name="phone" class="form-control" required
                                   pattern="[0-9+\-\s()]{7,20}"
                                   hx-post="{% url 'booking:validate_field' %}"
                                   hx-trigger="blur"
                                   hx-target="next .invalid-feedback">
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes (Optional)</label>
                        <textarea name="notes" class="form-control" rows="3"
                                  placeholder="Any special requests or information..."></textarea>
                    </div>

                    <div id="booking-result"></div>

                    <button type="submit" class="btn btn-primary btn-lg" id="submit-btn" disabled>
                        <span class="spinner-border spinner-border-sm me-2 htmx-indicator"></span>
                        Confirm Booking
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Booking Summary -->
        <div class="card sticky-top" style="top: 80px;"
             hx-get="{% url 'booking:summary' service.slug %}"
             hx-trigger="change from:#booking-form delay:200ms"
             hx-include="#booking-form"
             hx-swap="innerHTML"
             id="booking-summary">
            {% include "booking/partials/summary.html" %}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    flatpickr('#booking-date', {
        minDate: 'today',
        maxDate: new Date().fp_incr(60),
        disable: [
            function(date) {
                return date.getDay() === 0;
            }
        ]
    });
});

// Enable submit button when time slot is selected
document.body.addEventListener('htmx:afterSwap', function(e) {
    if (e.detail.target.id === 'time-slots-container' || e.detail.target.id === 'time-slots') {
        setupTimeSlots();
    }
});

function setupTimeSlots() {
    document.querySelectorAll('.time-slot-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            document.querySelectorAll('.time-slot-btn').forEach(b => {
                b.classList.remove('active', 'btn-primary');
                b.classList.add('btn-outline-primary');
            });
            this.classList.add('active', 'btn-primary');
            this.classList.remove('btn-outline-primary');
            document.getElementById('selected-time').value = this.dataset.id;
            document.getElementById('submit-btn').disabled = false;
        });
    });
}
</script>

<style>
label.card.staff-card { cursor: pointer; transition: all 0.2s; }
label.card.staff-card:has(input:checked) { border-color: var(--bs-primary); background-color: rgba(var(--bs-primary-rgb), 0.1); }
</style>
{% endblock %}
{% endraw %}
