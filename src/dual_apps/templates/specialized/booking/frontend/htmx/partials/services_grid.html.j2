{% raw %}<div class="row">
    {% for service in services %}
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100"
             hx-get="{% url 'booking:service_detail' service.slug %}"
             hx-trigger="click"
             hx-push-url="true"
             hx-target="body"
             style="cursor: pointer;">
            {% if service.image %}
            <img src="{{ service.image.url }}" class="card-img-top" alt="{{ service.name }}"
                 style="height: 200px; object-fit: cover;">
            {% endif %}
            <div class="card-body">
                <h5 class="card-title">{{ service.name }}</h5>
                <p class="card-text text-muted">{{ service.description|truncatewords:20 }}</p>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="h5 mb-0">${{ service.price }}</span>
                    <span class="badge bg-secondary">{{ service.duration }} min</span>
                </div>
                <div class="d-flex gap-2">
                    <a href="{% url 'booking:service_detail' service.slug %}"
                       class="btn btn-outline-primary"
                       hx-boost="true">
                        View Details
                    </a>
                    <a href="{% url 'booking:book' service.slug %}"
                       class="btn btn-primary"
                       hx-boost="true">
                        Book Now
                    </a>
                </div>
            </div>
        </div>
    </div>
    {% empty %}
    <div class="col-12 text-center py-5">
        <div class="mb-4" style="font-size: 5rem;">ðŸ“…</div>
        <h3>No services available</h3>
        <p class="text-muted">Check back later for our services.</p>
    </div>
    {% endfor %}
</div>

{% if services.has_other_pages %}
<div class="text-center">
    {% if services.has_next %}
    <button class="btn btn-outline-primary"
            hx-get="{% url 'booking:services' %}?page={{ services.next_page_number }}"
            hx-target="#services-grid"
            hx-swap="innerHTML"
            hx-include="[name='category'],[name='search']">
        Load More
    </button>
    {% endif %}
</div>
{% endif %}
{% endraw %}
