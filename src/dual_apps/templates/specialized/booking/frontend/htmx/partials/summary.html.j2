{% raw %}<div class="card-header">
    <h5 class="mb-0">Booking Summary</h5>
</div>
<div class="card-body">
    {% if service.image %}
    <img src="{{ service.image.url }}" class="img-fluid rounded mb-3" alt="{{ service.name }}">
    {% endif %}
    <h5>{{ service.name }}</h5>
    <p class="text-muted mb-3">{{ service.short_description }}</p>

    <div class="d-flex justify-content-between mb-2">
        <span>Duration</span>
        <span>{{ service.duration }} minutes</span>
    </div>
    <div class="d-flex justify-content-between mb-2">
        <span>Date</span>
        <span id="summary-date">{{ date|date:"M d, Y"|default:"Not selected" }}</span>
    </div>
    <div class="d-flex justify-content-between mb-2">
        <span>Time</span>
        <span id="summary-time">{{ time|default:"Not selected" }}</span>
    </div>
    {% if staff %}
    <div class="d-flex justify-content-between mb-2">
        <span>Staff</span>
        <span>{{ staff.name }}</span>
    </div>
    {% endif %}
    <hr>
    <div class="d-flex justify-content-between">
        <strong>Total</strong>
        <strong>${{ service.price }}</strong>
    </div>

    {% if promo_applied %}
    <div class="alert alert-success mt-3 mb-0 py-2">
        <small><i class="bi bi-check-circle me-1"></i>Promo code applied: -${{ discount }}</small>
    </div>
    {% else %}
    <div class="mt-3">
        <div class="input-group input-group-sm">
            <input type="text" name="promo_code" class="form-control" placeholder="Promo code"
                   hx-post="{% url 'booking:apply_promo' service.slug %}"
                   hx-trigger="blur"
                   hx-target="#promo-result"
                   hx-swap="innerHTML">
            <button class="btn btn-outline-secondary" type="button"
                    hx-post="{% url 'booking:apply_promo' service.slug %}"
                    hx-include="[name='promo_code']"
                    hx-target="#promo-result">
                Apply
            </button>
        </div>
        <div id="promo-result" class="small mt-1"></div>
    </div>
    {% endif %}
</div>
{% endraw %}
