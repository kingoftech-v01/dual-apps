{% extends "marketplace/base_marketplace.html" %}

{% block marketplace_content %}
<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                {% if seller.avatar %}
                <img src="{{ seller.avatar.url }}" class="rounded-circle mb-3"
                     style="width: 120px; height: 120px; object-fit: cover;">
                {% else %}
                <div class="rounded-circle bg-secondary text-white mx-auto mb-3 d-flex align-items-center justify-content-center"
                     style="width: 120px; height: 120px; font-size: 3rem;">
                    {{ seller.username|first|upper }}
                </div>
                {% endif %}
                
                <h4>
                    {{ seller.username }}
                    {% if seller.is_verified %}
                    <i class="bi bi-patch-check-fill text-primary" title="Verified Seller"></i>
                    {% endif %}
                </h4>
                
                <div class="rating-stars mb-2">
                    {% for i in "12345" %}
                    <i class="bi bi-star{% if forloop.counter <= seller.rating %}-fill{% endif %}"></i>
                    {% endfor %}
                    <span class="text-muted">({{ seller.review_count }} reviews)</span>
                </div>
                
                <p class="text-muted small">Member since {{ seller.date_joined|date:"M Y" }}</p>
                
                <div class="d-flex justify-content-center gap-3 mb-3">
                    <div class="text-center">
                        <h5 class="mb-0">{{ seller.listing_count }}</h5>
                        <small class="text-muted">Listings</small>
                    </div>
                    <div class="text-center">
                        <h5 class="mb-0">{{ seller.sales_count }}</h5>
                        <small class="text-muted">Sales</small>
                    </div>
                    <div class="text-center">
                        <h5 class="mb-0">{{ seller.completion_rate }}%</h5>
                        <small class="text-muted">Completion</small>
                    </div>
                </div>
                
                {% if user != seller %}
                <button class="btn btn-primary w-100 mb-2" data-bs-toggle="modal" data-bs-target="#messageModal">
                    <i class="bi bi-chat-left-text me-2"></i> Contact Seller
                </button>
                <button class="btn btn-outline-secondary w-100" id="follow-btn">
                    <i class="bi bi-person-plus me-2"></i> 
                    <span>{% if is_following %}Unfollow{% else %}Follow{% endif %}</span>
                </button>
                {% endif %}
            </div>
        </div>
    </div>
    
    <div class="col-lg-8">
        <ul class="nav nav-tabs mb-4" role="tablist">
            <li class="nav-item">
                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#listings-tab">
                    Listings ({{ seller.listing_count }})
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#reviews-tab">
                    Reviews ({{ seller.review_count }})
                </button>
            </li>
        </ul>
        
        <div class="tab-content">
            <div class="tab-pane fade show active" id="listings-tab">
                <div class="row">
                    {% for listing in listings %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100 listing-card">
                            <div class="position-relative">
                                {% if listing.images.first %}
                                <img src="{{ listing.images.first.image.url }}" class="card-img-top"
                                     alt="{{ listing.title }}" style="height: 160px; object-fit: cover;">
                                {% endif %}
                            </div>
                            <div class="card-body">
                                <h6 class="card-title">
                                    <a href="{% url 'marketplace:listing_detail' listing.slug %}" class="text-decoration-none stretched-link">
                                        {{ listing.title|truncatewords:6 }}
                                    </a>
                                </h6>
                                <span class="h5 text-primary">${{ listing.price }}</span>
                            </div>
                        </div>
                    </div>
                    {% empty %}
                    <div class="col-12 text-center py-5">
                        <p class="text-muted">No active listings</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
            
            <div class="tab-pane fade" id="reviews-tab">
                {% for review in reviews %}
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <strong>{{ review.reviewer.username }}</strong>
                            <small class="text-muted">{{ review.created_at|date:"M d, Y" }}</small>
                        </div>
                        <div class="rating-stars small mb-2">
                            {% for i in "12345" %}
                            <i class="bi bi-star{% if forloop.counter <= review.rating %}-fill{% endif %}"></i>
                            {% endfor %}
                        </div>
                        <p class="mb-0">{{ review.comment }}</p>
                    </div>
                </div>
                {% empty %}
                <div class="text-center py-5">
                    <p class="text-muted">No reviews yet</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
