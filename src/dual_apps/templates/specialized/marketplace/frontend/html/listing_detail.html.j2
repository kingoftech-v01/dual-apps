{% extends "marketplace/base_marketplace.html" %}

{% block marketplace_content %}
<div class="row">
    <div class="col-lg-7 mb-4">
        <div class="card">
            <div class="position-relative">
                {% if listing.images.all %}
                <div id="listing-carousel" class="carousel slide" data-bs-ride="false">
                    <div class="carousel-inner">
                        {% for image in listing.images.all %}
                        <div class="carousel-item {% if forloop.first %}active{% endif %}">
                            <img src="{{ image.image.url }}" class="d-block w-100" alt="{{ listing.title }}"
                                 style="height: 500px; object-fit: contain; background: #f8f9fa;">
                        </div>
                        {% endfor %}
                    </div>
                    {% if listing.images.count > 1 %}
                    <button class="carousel-control-prev" type="button" data-bs-target="#listing-carousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#listing-carousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                    {% endif %}
                </div>
                {% else %}
                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 500px;">
                    <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <span class="badge bg-secondary">{{ listing.get_condition_display }}</span>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-secondary btn-sm" id="share-btn">
                            <i class="bi bi-share"></i>
                        </button>
                        <button class="btn btn-outline-secondary btn-sm favorite-btn" data-listing="{{ listing.pk }}">
                            <i class="bi bi-heart{% if is_favorited %}-fill text-danger{% endif %}"></i>
                        </button>
                    </div>
                </div>

                <h2 class="mb-2">{{ listing.title }}</h2>
                <h3 class="text-primary mb-3">${{ listing.price }}</h3>

                <div class="mb-4">
                    <span class="text-muted">
                        <i class="bi bi-geo-alt"></i> {{ listing.location|default:"Location not specified" }}
                    </span>
                    <span class="text-muted ms-3">
                        <i class="bi bi-eye"></i> {{ listing.views }} views
                    </span>
                </div>

                {% if user != listing.seller %}
                <div class="d-grid gap-2 mb-4">
                    <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#messageModal">
                        <i class="bi bi-chat-left-text me-2"></i> Contact Seller
                    </button>
                    {% if listing.allow_offers %}
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#offerModal">
                        <i class="bi bi-tag me-2"></i> Make an Offer
                    </button>
                    {% endif %}
                </div>
                {% else %}
                <div class="d-grid gap-2 mb-4">
                    <a href="{% url 'marketplace:listing_edit' listing.slug %}" class="btn btn-primary">
                        <i class="bi bi-pencil me-2"></i> Edit Listing
                    </a>
                </div>
                {% endif %}

                <div class="border-top pt-3">
                    <h6 class="mb-3">Seller Information</h6>
                    <div class="d-flex align-items-center">
                        <a href="{% url 'marketplace:seller_profile' listing.seller.username %}">
                            {% if listing.seller.avatar %}
                            <img src="{{ listing.seller.avatar.url }}" class="rounded-circle me-3"
                                 style="width: 60px; height: 60px; object-fit: cover;">
                            {% else %}
                            <div class="rounded-circle bg-secondary text-white me-3 d-flex align-items-center justify-content-center"
                                 style="width: 60px; height: 60px; font-size: 1.5rem;">
                                {{ listing.seller.username|first|upper }}
                            </div>
                            {% endif %}
                        </a>
                        <div>
                            <h6 class="mb-1">
                                <a href="{% url 'marketplace:seller_profile' listing.seller.username %}" class="text-decoration-none">
                                    {{ listing.seller.username }}
                                </a>
                                {% if listing.seller.is_verified %}
                                <i class="bi bi-patch-check-fill text-primary"></i>
                                {% endif %}
                            </h6>
                            <div class="rating-stars small">
                                {% for i in "12345" %}
                                <i class="bi bi-star{% if forloop.counter <= listing.seller.rating %}-fill{% endif %}"></i>
                                {% endfor %}
                                <span class="text-muted">({{ listing.seller.review_count }})</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Description</h5>
            </div>
            <div class="card-body">
                {{ listing.description|linebreaks }}
            </div>
        </div>
    </div>
</div>

<!-- Message Modal -->
<div class="modal fade" id="messageModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Contact {{ listing.seller.username }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="{% url 'marketplace:send_message' listing.pk %}">
                {% csrf_token %}
                <div class="modal-body">
                    <textarea name="message" class="form-control" rows="4"
                              placeholder="Hi, I am interested in this item..."></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Offer Modal -->
<div class="modal fade" id="offerModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Make an Offer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="{% url 'marketplace:make_offer' listing.pk %}">
                {% csrf_token %}
                <div class="modal-body">
                    <p class="text-muted">Listing price: <strong>${{ listing.price }}</strong></p>
                    <div class="mb-3">
                        <label class="form-label">Your Offer</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" name="amount" class="form-control" step="0.01" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit Offer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.getElementById('share-btn').addEventListener('click', function() {
    if (navigator.share) {
        navigator.share({ title: '{{ listing.title }}', url: window.location.href });
    } else {
        navigator.clipboard.writeText(window.location.href);
        alert('Link copied!');
    }
});
</script>
{% endblock %}
