{% extends "marketplace/base_marketplace.html" %}

{% block marketplace_content %}
<div class="row">
    <!-- Sidebar Filters -->
    <div class="col-lg-3 mb-4">
        <div class="card sticky-top" style="top: 1rem;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0">Filters</h6>
                <a href="{% url 'marketplace:listings' %}" class="btn btn-sm btn-link">Clear</a>
            </div>
            <div class="card-body">
                <form method="get" id="filter-form">
                    <div class="mb-3">
                        <label class="form-label">Search</label>
                        <input type="text" name="q" class="form-control" placeholder="What are you looking for?"
                               value="{{ request.GET.q }}">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select name="category" class="form-select">
                            <option value="">All Categories</option>
                            {% for category in categories %}
                            <option value="{{ category.slug }}" {% if request.GET.category == category.slug %}selected{% endif %}>
                                {{ category.name }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Price Range</label>
                        <div class="row g-2">
                            <div class="col-6">
                                <input type="number" name="min_price" class="form-control" placeholder="Min"
                                       value="{{ request.GET.min_price }}">
                            </div>
                            <div class="col-6">
                                <input type="number" name="max_price" class="form-control" placeholder="Max"
                                       value="{{ request.GET.max_price }}">
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Condition</label>
                        {% for value, label in condition_choices %}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="condition" value="{{ value }}"
                                   id="cond-{{ value }}" {% if value in selected_conditions %}checked{% endif %}>
                            <label class="form-check-label" for="cond-{{ value }}">{{ label }}</label>
                        </div>
                        {% endfor %}
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Location</label>
                        <input type="text" name="location" class="form-control" placeholder="City or ZIP"
                               value="{{ request.GET.location }}">
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Listings Grid -->
    <div class="col-lg-9">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <p class="mb-0 text-muted">{{ listings.paginator.count }} listings found</p>
            <select name="sort" class="form-select form-select-sm" style="width: auto;"
                    onchange="this.form.submit()" form="filter-form">
                <option value="-created_at">Newest First</option>
                <option value="price">Price: Low to High</option>
                <option value="-price">Price: High to Low</option>
            </select>
        </div>

        <div class="row" id="listings-grid">
            {% for listing in listings %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 listing-card">
                    <div class="position-relative">
                        {% if listing.images.first %}
                        <img src="{{ listing.images.first.image.url }}" class="card-img-top"
                             alt="{{ listing.title }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                             style="height: 200px;">
                            <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                        </div>
                        {% endif %}
                        {% if listing.is_featured %}
                        <span class="badge bg-warning position-absolute top-0 start-0 m-2">Featured</span>
                        {% endif %}
                        <button class="btn btn-sm position-absolute top-0 end-0 m-2 favorite-btn"
                                style="background: rgba(255,255,255,0.9);" data-listing="{{ listing.pk }}">
                            <i class="bi bi-heart{% if listing.pk in user_favorites %}-fill text-danger{% endif %}"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <h6 class="card-title mb-1">
                            <a href="{% url 'marketplace:listing_detail' listing.slug %}" class="text-decoration-none stretched-link">
                                {{ listing.title|truncatewords:8 }}
                            </a>
                        </h6>
                        <p class="text-muted small mb-2">
                            <span class="badge bg-secondary">{{ listing.get_condition_display }}</span>
                            {% if listing.location %}
                            <span class="ms-2"><i class="bi bi-geo-alt"></i> {{ listing.location }}</span>
                            {% endif %}
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0 text-primary">${{ listing.price }}</span>
                            <small class="text-muted">{{ listing.created_at|timesince }} ago</small>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex align-items-center">
                            <small class="text-muted">{{ listing.seller.username }}</small>
                            {% if listing.seller.is_verified %}
                            <i class="bi bi-patch-check-fill text-primary ms-1"></i>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% empty %}
            <div class="col-12 text-center py-5">
                <div class="mb-4" style="font-size: 5rem;">ðŸ›’</div>
                <h3>No listings found</h3>
                <p class="text-muted">Try adjusting your filters.</p>
            </div>
            {% endfor %}
        </div>

        {% if listings.has_other_pages %}
        <nav>
            <ul class="pagination justify-content-center">
                {% if listings.has_previous %}
                <li class="page-item">
                    <a class="page-link" href="?page={{ listings.previous_page_number }}">Previous</a>
                </li>
                {% endif %}
                {% if listings.has_next %}
                <li class="page-item">
                    <a class="page-link" href="?page={{ listings.next_page_number }}">Next</a>
                </li>
                {% endif %}
            </ul>
        </nav>
        {% endif %}
    </div>
</div>

<script>
document.querySelectorAll('.favorite-btn').forEach(btn => {
    btn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        const listingId = this.dataset.listing;
        fetch(`/marketplace/listing/${listingId}/favorite/`, {
            method: 'POST',
            headers: {
                'X-CSRFToken': '{{ csrf_token }}',
                'Content-Type': 'application/json'
            }
        }).then(response => response.json())
          .then(data => {
              const icon = this.querySelector('i');
              if (data.favorited) {
                  icon.classList.replace('bi-heart', 'bi-heart-fill');
                  icon.classList.add('text-danger');
              } else {
                  icon.classList.replace('bi-heart-fill', 'bi-heart');
                  icon.classList.remove('text-danger');
              }
          });
    });
});
</script>
{% endblock %}
