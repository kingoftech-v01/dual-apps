import { useState } from 'react';
import { Link } from 'react-router-dom';
import { marketplaceAPI } from '../../utils/api';
import { useAuth } from '../../context/AuthContext';

export default function ListingCard({ listing, onFavoriteChange }) {
  const { isAuthenticated } = useAuth();
  const [isFavorited, setIsFavorited] = useState(listing.is_favorited);
  const [favoriteLoading, setFavoriteLoading] = useState(false);

  const handleFavorite = async (e) => {
    e.preventDefault();
    e.stopPropagation();
    
    if (!isAuthenticated) {
      window.location.href = '/login';
      return;
    }

    setFavoriteLoading(true);
    try {
      const response = await marketplaceAPI.toggleFavorite(listing.id);
      setIsFavorited(response.data.favorited);
      if (onFavoriteChange) {
        onFavoriteChange(listing.id, response.data.favorited);
      }
    } catch (error) {
      console.error('Failed to toggle favorite:', error);
    } finally {
      setFavoriteLoading(false);
    }
  };

  return (
    <div className="card h-100 listing-card">
      <div className="position-relative">
        {listing.images?.[0] ? (
          <img
            src={listing.images[0].url}
            className="card-img-top"
            alt={listing.title}
            style={{ height: '200px', objectFit: 'cover' }}
          />
        ) : (
          <div
            className="card-img-top bg-light d-flex align-items-center justify-content-center"
            style={{ height: '200px' }}
          >
            <i className="bi bi-image text-muted" style={{ fontSize: '3rem' }}></i>
          </div>
        )}
        
        {listing.is_featured && (
          <span className="badge bg-warning position-absolute top-0 start-0 m-2">
            Featured
          </span>
        )}
        
        <button
          className="btn btn-sm position-absolute top-0 end-0 m-2"
          style={{ background: 'rgba(255,255,255,0.9)' }}
          onClick={handleFavorite}
          disabled={favoriteLoading}
        >
          {favoriteLoading ? (
            <span className="spinner-border spinner-border-sm"></span>
          ) : (
            <i className={`bi bi-heart${isFavorited ? '-fill text-danger' : ''}`}></i>
          )}
        </button>
      </div>
      
      <div className="card-body">
        <h6 className="card-title mb-1">
          <Link
            to={`/listing/${listing.slug}`}
            className="text-decoration-none stretched-link"
          >
            {listing.title.length > 40 ? listing.title.slice(0, 40) + '...' : listing.title}
          </Link>
        </h6>
        <p className="text-muted small mb-2">
          <span className="badge bg-secondary">{listing.condition_display}</span>
          {listing.location && (
            <span className="ms-2">
              <i className="bi bi-geo-alt"></i> {listing.location}
            </span>
          )}
        </p>
        <div className="d-flex justify-content-between align-items-center">
          <span className="h5 mb-0 text-primary">${listing.price}</span>
          <small className="text-muted">{listing.time_ago}</small>
        </div>
      </div>
      
      <div className="card-footer bg-transparent">
        <div className="d-flex align-items-center">
          {listing.seller.avatar ? (
            <img
              src={listing.seller.avatar}
              className="rounded-circle me-2"
              style={{ width: '24px', height: '24px', objectFit: 'cover' }}
              alt={listing.seller.username}
            />
          ) : (
            <div
              className="rounded-circle bg-secondary text-white me-2 d-flex align-items-center justify-content-center"
              style={{ width: '24px', height: '24px', fontSize: '12px' }}
            >
              {listing.seller.username[0].toUpperCase()}
            </div>
          )}
          <small className="text-muted">{listing.seller.username}</small>
          {listing.seller.is_verified && (
            <i className="bi bi-patch-check-fill text-primary ms-1" title="Verified"></i>
          )}
        </div>
      </div>
    </div>
  );
}
