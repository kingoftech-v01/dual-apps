<p class="text-muted mb-3">{{ listings.paginator.count }} listings found</p>

<div class="row" id="listings-grid">
    {% for listing in listings %}
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 listing-card" id="listing-{{ listing.pk }}">
            <div class="position-relative">
                {% if listing.images.first %}
                <img src="{{ listing.images.first.image.url }}" class="card-img-top"
                     alt="{{ listing.title }}" style="height: 200px; object-fit: cover;">
                {% else %}
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                     style="height: 200px;">
                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                </div>
                {% endif %}
                {% if listing.is_featured %}
                <span class="badge bg-warning position-absolute top-0 start-0 m-2">Featured</span>
                {% endif %}
                <button class="btn btn-sm position-absolute top-0 end-0 m-2"
                        style="background: rgba(255,255,255,0.9);"
                        hx-post="{% url 'marketplace:toggle_favorite' listing.pk %}"
                        hx-target="this"
                        hx-swap="innerHTML">
                    <i class="bi bi-heart{% if listing.pk in user_favorites %}-fill text-danger{% endif %}"></i>
                </button>
            </div>
            <div class="card-body">
                <h6 class="card-title mb-1">
                    <a href="{% url 'marketplace:listing_detail' listing.slug %}"
                       hx-get="{% url 'marketplace:listing_detail' listing.slug %}"
                       hx-target="body"
                       hx-push-url="true"
                       class="text-decoration-none stretched-link">
                        {{ listing.title|truncatewords:8 }}
                    </a>
                </h6>
                <p class="text-muted small mb-2">
                    <span class="badge bg-secondary">{{ listing.get_condition_display }}</span>
                </p>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="h5 mb-0 text-primary">${{ listing.price }}</span>
                    <small class="text-muted">{{ listing.created_at|timesince }}</small>
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <small class="text-muted">{{ listing.seller.username }}</small>
            </div>
        </div>
    </div>
    {% empty %}
    <div class="col-12 text-center py-5">
        <h4>No listings found</h4>
        <p class="text-muted">Try different filters</p>
    </div>
    {% endfor %}
</div>

{% if listings.has_next %}
<div class="text-center mt-4">
    <button class="btn btn-outline-primary"
            hx-get="{% url 'marketplace:listings' %}?page={{ listings.next_page_number }}"
            hx-target="#listings-grid"
            hx-swap="beforeend"
            hx-select="#listings-grid > div">
        <span class="htmx-indicator spinner-border spinner-border-sm me-1"></span>
        Load More
    </button>
</div>
{% endif %}
