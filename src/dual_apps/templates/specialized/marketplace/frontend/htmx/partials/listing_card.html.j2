{% raw %}<div class="card h-100 listing-card" id="listing-{{ listing.pk }}">
    <div class="position-relative">
        {% if listing.images.first %}
        <img src="{{ listing.images.first.image.url }}" class="card-img-top"
             alt="{{ listing.title }}" style="height: 200px; object-fit: cover;">
        {% else %}
        <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
             style="height: 200px;">
            <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
        </div>
        {% endif %}
        {% if listing.is_featured %}
        <span class="badge bg-warning position-absolute top-0 start-0 m-2">Featured</span>
        {% endif %}
        <button class="btn btn-sm position-absolute top-0 end-0 m-2"
                style="background: rgba(255,255,255,0.9);"
                hx-post="{% url 'marketplace:toggle_favorite' listing.pk %}"
                hx-swap="innerHTML"
                hx-target="this">
            <i class="bi bi-heart{% if is_favorited %}-fill text-danger{% endif %}"></i>
        </button>
    </div>
    <div class="card-body">
        <h6 class="card-title mb-1">
            <a href="{% url 'marketplace:listing_detail' listing.slug %}" class="text-decoration-none stretched-link">
                {{ listing.title|truncatewords:8 }}
            </a>
        </h6>
        <p class="text-muted small mb-2">
            <span class="badge bg-{{ listing.condition_color }}">{{ listing.get_condition_display }}</span>
            {% if listing.location %}
            <span class="ms-2"><i class="bi bi-geo-alt"></i> {{ listing.location }}</span>
            {% endif %}
        </p>
        <div class="d-flex justify-content-between align-items-center">
            <span class="h5 mb-0 text-primary">${{ listing.price }}</span>
            <small class="text-muted">{{ listing.created_at|timesince }} ago</small>
        </div>
    </div>
    <div class="card-footer bg-transparent">
        <div class="d-flex align-items-center">
            {% if listing.seller.avatar %}
            <img src="{{ listing.seller.avatar.url }}" class="rounded-circle me-2"
                 style="width: 24px; height: 24px; object-fit: cover;">
            {% else %}
            <div class="rounded-circle bg-secondary text-white me-2 d-flex align-items-center justify-content-center"
                 style="width: 24px; height: 24px; font-size: 12px;">
                {{ listing.seller.username|first|upper }}
            </div>
            {% endif %}
            <small class="text-muted">{{ listing.seller.username }}</small>
            {% if listing.seller.is_verified %}
            <i class="bi bi-patch-check-fill text-primary ms-1" title="Verified Seller"></i>
            {% endif %}
            <span class="ms-auto rating-stars small">
                {% for i in "12345" %}
                <i class="bi bi-star{% if forloop.counter <= listing.seller.rating %}-fill{% endif %}"></i>
                {% endfor %}
            </span>
        </div>
    </div>
</div>
{% endraw %}
