{% raw %}{% extends "saas/base_saas.html" %}

{% block title %}Team - {{ project_name_display }}{% endblock %}

{% block saas_content %}
<div class="row">
    <!-- Sidebar (included from dashboard) -->
    <div class="col-md-3 col-lg-2">
        {% include "saas/partials/sidebar.html" %}
    </div>

    <!-- Main Content -->
    <div class="col-md-9 col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Team Members</h1>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#inviteModal">
                + Invite Member
            </button>
        </div>

        <!-- Team Limits -->
        <div class="alert alert-info mb-4">
            <strong>{{ team_members.count }}/{{ team_limit }}</strong> team members used
            {% if team_members.count >= team_limit %}
            · <a href="{% url 'saas:pricing' %}">Upgrade your plan</a> for more seats
            {% endif %}
        </div>

        <!-- Team Members Table -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Member</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Joined</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for member in team_members %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {% if member.user.profile.avatar %}
                                        <img src="{{ member.user.profile.avatar.url }}" class="rounded-circle me-2"
                                             style="width: 32px; height: 32px; object-fit: cover;">
                                        {% else %}
                                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2"
                                             style="width: 32px; height: 32px;">
                                            {{ member.user.first_name|first|upper }}
                                        </div>
                                        {% endif %}
                                        <span>{{ member.user.get_full_name|default:member.user.username }}</span>
                                    </div>
                                </td>
                                <td>{{ member.user.email }}</td>
                                <td>
                                    <span class="badge bg-{% if member.role == 'owner' %}primary{% elif member.role == 'admin' %}warning{% else %}secondary{% endif %}">
                                        {{ member.get_role_display }}
                                    </span>
                                </td>
                                <td>
                                    {% if member.is_active %}
                                    <span class="text-success">● Active</span>
                                    {% else %}
                                    <span class="text-muted">● Pending</span>
                                    {% endif %}
                                </td>
                                <td>{{ member.joined_at|date:"M d, Y" }}</td>
                                <td>
                                    {% if member.role != 'owner' and user_role == 'owner' %}
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-link" data-bs-toggle="dropdown">⋮</button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" href="#" data-bs-toggle="modal"
                                                   data-bs-target="#roleModal" data-member-id="{{ member.pk }}">
                                                    Change Role
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form method="post" action="{% url 'saas:team_remove' member.pk %}">
                                                    {% csrf_token %}
                                                    <button type="submit" class="dropdown-item text-danger"
                                                            onclick="return confirm('Remove this team member?')">
                                                        Remove
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pending Invitations -->
        {% if pending_invitations %}
        <h4 class="mt-5 mb-3">Pending Invitations</h4>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Invited</th>
                                <th>Expires</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for invite in pending_invitations %}
                            <tr>
                                <td>{{ invite.email }}</td>
                                <td><span class="badge bg-secondary">{{ invite.get_role_display }}</span></td>
                                <td>{{ invite.created_at|date:"M d, Y" }}</td>
                                <td>{{ invite.expires_at|date:"M d, Y" }}</td>
                                <td>
                                    <form method="post" action="{% url 'saas:invite_cancel' invite.pk %}" class="d-inline">
                                        {% csrf_token %}
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Cancel</button>
                                    </form>
                                    <form method="post" action="{% url 'saas:invite_resend' invite.pk %}" class="d-inline">
                                        {% csrf_token %}
                                        <button type="submit" class="btn btn-sm btn-outline-primary">Resend</button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<!-- Invite Modal -->
<div class="modal fade" id="inviteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" action="{% url 'saas:team_invite' %}">
                {% csrf_token %}
                <div class="modal-header">
                    <h5 class="modal-title">Invite Team Member</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <input type="email" name="email" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select name="role" class="form-select">
                            <option value="member">Member</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Personal Message (optional)</label>
                        <textarea name="message" class="form-control" rows="3"
                                  placeholder="Add a personal message to the invitation..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Send Invitation</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
{% endraw %}
