{% raw %}{% extends "saas/base_saas.html" %}

{% block title %}Dashboard - {{ project_name_display }}{% endblock %}

{% block saas_content %}
<div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2">
        <div class="card">
            <div class="card-body p-0">
                <nav class="nav flex-column">
                    <a class="nav-link active" href="{% url 'saas:dashboard' %}">
                        üìä Dashboard
                    </a>
                    <a class="nav-link" href="{% url 'saas:projects' %}">
                        üìÅ Projects
                    </a>
                    <a class="nav-link" href="{% url 'saas:team' %}">
                        üë• Team
                    </a>
                    <a class="nav-link" href="{% url 'saas:analytics' %}">
                        üìà Analytics
                    </a>
                    <a class="nav-link" href="{% url 'saas:settings' %}">
                        ‚öôÔ∏è Settings
                    </a>
                    <a class="nav-link" href="{% url 'saas:billing' %}">
                        üí≥ Billing
                    </a>
                </nav>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="col-md-9 col-lg-10">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Dashboard</h1>
            <div>
                <span class="badge bg-{% if subscription.is_active %}success{% else %}secondary{% endif %} me-2">
                    {{ subscription.plan_name|default:"Free" }} Plan
                </span>
                {% if not subscription.is_active %}
                <a href="{% url 'saas:pricing' %}" class="btn btn-primary btn-sm">Upgrade</a>
                {% endif %}
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="mb-0">{{ stats.projects }}</h3>
                        <small class="text-muted">Projects</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="mb-0">{{ stats.team_members }}</h3>
                        <small class="text-muted">Team Members</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="mb-0">{{ stats.storage_used|filesizeformat }}</h3>
                        <small class="text-muted">Storage Used</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="mb-0">{{ stats.api_calls }}</h3>
                        <small class="text-muted">API Calls (30d)</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Usage Chart -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Usage Overview</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                        <span>Storage</span>
                        <span>{{ usage.storage_percent }}%</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" style="width: {{ usage.storage_percent }}%"></div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between mb-1">
                        <span>API Calls</span>
                        <span>{{ usage.api_percent }}%</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" style="width: {{ usage.api_percent }}%"></div>
                    </div>
                </div>
                <div>
                    <div class="d-flex justify-content-between mb-1">
                        <span>Team Members</span>
                        <span>{{ usage.team_percent }}%</span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar" style="width: {{ usage.team_percent }}%"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Recent Activity</h5>
                <a href="{% url 'saas:activity' %}" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    {% for activity in recent_activities %}
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                        <div>
                            <strong>{{ activity.user.get_full_name|default:activity.user.username }}</strong>
                            {{ activity.action }}
                            <span class="text-primary">{{ activity.target }}</span>
                        </div>
                        <small class="text-muted">{{ activity.created_at|timesince }} ago</small>
                    </li>
                    {% empty %}
                    <li class="list-group-item px-0 text-muted">No recent activity</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% endraw %}
