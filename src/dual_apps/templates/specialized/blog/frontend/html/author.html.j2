{% raw %}{% extends "blog/base_blog.html" %}

{% block title %}{{ author.get_full_name|default:author.username }} - {{ project_name_display }}{% endblock %}

{% block blog_content %}
<div class="card mb-4">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-auto">
                {% if author.profile.avatar %}
                <img src="{{ author.profile.avatar.url }}" class="rounded-circle"
                     alt="{{ author.get_full_name }}" style="width: 120px; height: 120px; object-fit: cover;">
                {% else %}
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                     style="width: 120px; height: 120px; font-size: 3rem;">
                    {{ author.first_name|first|upper }}{{ author.last_name|first|upper }}
                </div>
                {% endif %}
            </div>
            <div class="col">
                <h1 class="h2 mb-1">{{ author.get_full_name|default:author.username }}</h1>
                {% if author.profile.title %}
                <p class="text-muted mb-2">{{ author.profile.title }}</p>
                {% endif %}
                {% if author.profile.bio %}
                <p class="mb-3">{{ author.profile.bio }}</p>
                {% endif %}
                <div class="d-flex gap-2">
                    {% if author.profile.twitter %}
                    <a href="https://twitter.com/{{ author.profile.twitter }}" target="_blank"
                       class="btn btn-sm btn-outline-secondary">üê¶ Twitter</a>
                    {% endif %}
                    {% if author.profile.linkedin %}
                    <a href="{{ author.profile.linkedin }}" target="_blank"
                       class="btn btn-sm btn-outline-secondary">üíº LinkedIn</a>
                    {% endif %}
                    {% if author.profile.website %}
                    <a href="{{ author.profile.website }}" target="_blank"
                       class="btn btn-sm btn-outline-secondary">üåê Website</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="h4 mb-0">Posts by {{ author.get_full_name|default:author.username }}</h2>
    <span class="text-muted">{{ posts.paginator.count }} article{% if posts.paginator.count != 1 %}s{% endif %}</span>
</div>

{% if posts %}
{% for post in posts %}
<article class="card mb-4">
    <div class="row g-0">
        {% if post.featured_image %}
        <div class="col-md-4">
            <a href="{% url 'blog:post_detail' post.slug %}">
                <img src="{{ post.featured_image.url }}" class="img-fluid rounded-start h-100"
                     alt="{{ post.title }}" style="object-fit: cover;">
            </a>
        </div>
        {% endif %}
        <div class="{% if post.featured_image %}col-md-8{% else %}col-12{% endif %}">
            <div class="card-body">
                {% if post.category %}
                <a href="{% url 'blog:category' post.category.slug %}" class="badge bg-primary text-decoration-none">
                    {{ post.category.name }}
                </a>
                {% endif %}
                <h3 class="card-title h5 mt-2">
                    <a href="{% url 'blog:post_detail' post.slug %}" class="text-decoration-none text-dark">
                        {{ post.title }}
                    </a>
                </h3>
                <p class="card-text text-muted">{{ post.excerpt|truncatewords:25 }}</p>
                <small class="text-muted">
                    {{ post.published_at|date:"M d, Y" }} ¬∑ {{ post.reading_time }} min read
                </small>
            </div>
        </div>
    </div>
</article>
{% endfor %}

{% if posts.has_other_pages %}
<nav aria-label="Author posts pagination">
    <ul class="pagination justify-content-center">
        {% if posts.has_previous %}
        <li class="page-item">
            <a class="page-link" href="?page={{ posts.previous_page_number }}">Previous</a>
        </li>
        {% endif %}
        {% for num in posts.paginator.page_range %}
        {% if num == posts.number %}
        <li class="page-item active"><span class="page-link">{{ num }}</span></li>
        {% elif num > posts.number|add:'-3' and num < posts.number|add:'3' %}
        <li class="page-item">
            <a class="page-link" href="?page={{ num }}">{{ num }}</a>
        </li>
        {% endif %}
        {% endfor %}
        {% if posts.has_next %}
        <li class="page-item">
            <a class="page-link" href="?page={{ posts.next_page_number }}">Next</a>
        </li>
        {% endif %}
    </ul>
</nav>
{% endif %}
{% else %}
<div class="text-center py-5">
    <p class="text-muted">This author hasn't published any posts yet.</p>
</div>
{% endif %}
{% endblock %}
{% endraw %}
