"""
{{ project_name }} URL Configuration - E-commerce
Generated by dual-apps v{{ version }}

E-commerce URLs with full shop functionality:
- /api/v1/shop/ - Product catalog, cart, orders API
- /shop/ - Frontend shopping experience
"""

from django.contrib import admin
from django.urls import path, include
from django.conf import settings
from django.conf.urls.static import static
from rest_framework.routers import DefaultRouter

# DRF Router for API endpoints
router = DefaultRouter()

# Shop API - E-commerce ViewSets
from apps.shop.views_api import (
    CategoryViewSet,
    ProductViewSet,
    CartViewSet,
    OrderViewSet,
    ReviewViewSet,
    WishlistViewSet,
)

router.register(r"categories", CategoryViewSet, basename="category")
router.register(r"products", ProductViewSet, basename="product")
router.register(r"cart", CartViewSet, basename="cart")
router.register(r"orders", OrderViewSet, basename="order")
router.register(r"reviews", ReviewViewSet, basename="review")
router.register(r"wishlist", WishlistViewSet, basename="wishlist")

{% for app in apps_config %}
{% if app.name != 'shop' %}
# {{ app.name_title }} API
from apps.{{ app.name }}.views_api import {{ app.name_pascal }}ViewSet
router.register(r"{{ app.name }}", {{ app.name_pascal }}ViewSet, basename="{{ app.name }}")
{% endif %}
{% endfor %}

urlpatterns = [
    # Admin
    path("admin/", admin.site.urls),

    # API v1 (DRF)
    path("api/v1/", include((router.urls, "api"), namespace="api")),

{% if use_allauth %}
    # Authentication (Allauth)
    path("accounts/", include("allauth.urls")),
{% endif %}

    # Frontend - Shop
    path("shop/", include("apps.shop.urls")),

    # Frontend - Other Apps
{% for app in apps_config %}
{% if app.name != 'shop' %}
    path("{{ app.name }}/", include("apps.{{ app.name }}.urls")),
{% endif %}
{% endfor %}

    # Root redirect to shop
    path("", lambda request: __import__("django.shortcuts", fromlist=["redirect"]).redirect("/shop/")),
]

# Debug toolbar (development only)
if settings.DEBUG:
    try:
        import debug_toolbar
        urlpatterns += [path("__debug__/", include(debug_toolbar.urls))]
    except ImportError:
        pass

    # Serve media files in development
    urlpatterns += static(settings.MEDIA_URL, document_root=settings.MEDIA_ROOT)
