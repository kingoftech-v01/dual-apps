{% raw %}{% extends "shop/base_shop.html" %}

{% block title %}Products - {{ project_name_display }}{% endblock %}

{% block breadcrumb %}
<li class="breadcrumb-item active">Products</li>
{% endblock %}

{% block shop_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>{% if current_category %}{{ current_category.name }}{% else %}All Products{% endif %}</h1>
    <div class="d-flex gap-2">
        <select class="form-select form-select-sm" onchange="window.location.href=this.value">
            <option value="?sort=newest" {% if request.GET.sort == 'newest' %}selected{% endif %}>Newest</option>
            <option value="?sort=price_low" {% if request.GET.sort == 'price_low' %}selected{% endif %}>Price: Low to High</option>
            <option value="?sort=price_high" {% if request.GET.sort == 'price_high' %}selected{% endif %}>Price: High to Low</option>
            <option value="?sort=popular" {% if request.GET.sort == 'popular' %}selected{% endif %}>Most Popular</option>
        </select>
    </div>
</div>

{% if query %}
<p class="text-muted">Search results for: <strong>{{ query }}</strong></p>
{% endif %}

<div class="row">
    {% for product in products %}
    <div class="col-md-4 col-sm-6 mb-4">
        <div class="product-card">
            <a href="{% url 'shop:product_detail' product.slug %}">
                {% if product.image %}
                <img src="{{ product.image.url }}" alt="{{ product.name }}" class="product-image">
                {% else %}
                <div class="product-image bg-secondary d-flex align-items-center justify-content-center">
                    <span class="text-white">No Image</span>
                </div>
                {% endif %}
            </a>

            {% if product.is_on_sale %}
            <span class="badge-sale">Sale</span>
            {% endif %}

            <div class="mt-3">
                <h5 class="mb-1">
                    <a href="{% url 'shop:product_detail' product.slug %}" class="text-decoration-none text-dark">
                        {{ product.name }}
                    </a>
                </h5>

                {% if product.category %}
                <small class="text-muted">{{ product.category.name }}</small>
                {% endif %}

                <div class="rating my-2">
                    {% for i in "12345" %}
                        {% if forloop.counter <= product.average_rating %}
                        ★
                        {% else %}
                        ☆
                        {% endif %}
                    {% endfor %}
                    <small class="text-muted">({{ product.review_count }})</small>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="price">${{ product.price }}</span>
                        {% if product.compare_at_price %}
                        <span class="old-price">${{ product.compare_at_price }}</span>
                        {% endif %}
                    </div>
                    <form method="post" action="{% url 'shop:add_to_cart' product.pk %}">
                        {% csrf_token %}
                        <input type="hidden" name="quantity" value="1">
                        <button type="submit" class="btn btn-sm btn-primary" {% if not product.is_available %}disabled{% endif %}>
                            {% if product.is_available %}Add to Cart{% else %}Out of Stock{% endif %}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {% empty %}
    <div class="col-12">
        <div class="alert alert-info">
            No products found. {% if query %}Try a different search term.{% endif %}
        </div>
    </div>
    {% endfor %}
</div>

{% if products.has_other_pages %}
<nav aria-label="Product pagination">
    <ul class="pagination justify-content-center">
        {% if products.has_previous %}
        <li class="page-item">
            <a class="page-link" href="?page={{ products.previous_page_number }}{% if query %}&q={{ query }}{% endif %}">Previous</a>
        </li>
        {% endif %}

        {% for num in products.paginator.page_range %}
        <li class="page-item {% if products.number == num %}active{% endif %}">
            <a class="page-link" href="?page={{ num }}{% if query %}&q={{ query }}{% endif %}">{{ num }}</a>
        </li>
        {% endfor %}

        {% if products.has_next %}
        <li class="page-item">
            <a class="page-link" href="?page={{ products.next_page_number }}{% if query %}&q={{ query }}{% endif %}">Next</a>
        </li>
        {% endif %}
    </ul>
</nav>
{% endif %}
{% endblock %}
{% endraw %}