import { Routes, Route, Link } from 'react-router-dom'
{% for app in apps %}
import {{ app | title }}List from './components/{{ app | title }}List'
{% endfor %}
import './App.css'

function Home() {
  return (
    <div>
      <h1>{{ project_name_display }}</h1>
      <p>Welcome to your React + Django application.</p>
      <ul>
{% for app in apps %}
        <li><Link to="/{{ app }}">{{ app | title }}</Link></li>
{% endfor %}
      </ul>
    </div>
  )
}

function App() {
  return (
    <div className="app">
      <nav>
        <Link to="/">{{ project_name_display }}</Link>
        <ul>
{% for app in apps %}
          <li><Link to="/{{ app }}">{{ app | title }}</Link></li>
{% endfor %}
        </ul>
      </nav>

      <main>
        <Routes>
          <Route path="/" element={<Home />} />
{% for app in apps %}
          <Route path="/{{ app }}" element={<{{ app | title }}List />} />
{% endfor %}
        </Routes>
      </main>

      <footer>
        <p>&copy; {{ project_name_display }}</p>
      </footer>
    </div>
  )
}

export default App
