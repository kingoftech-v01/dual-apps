.app {
  max-width: 1200px;
  margin: 0 auto;
  padding: 1rem;
}

nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 0;
  border-bottom: 1px solid #eee;
  margin-bottom: 2rem;
}

nav ul {
  display: flex;
  list-style: none;
  gap: 1rem;
  margin: 0;
  padding: 0;
}

nav a {
  text-decoration: none;
  color: #333;
}

nav a:hover {
  color: #0066cc;
}

main {
  min-height: 60vh;
}

footer {
  margin-top: 2rem;
  padding: 1rem 0;
  border-top: 1px solid #eee;
  text-align: center;
  color: #666;
}

.loading {
  text-align: center;
  padding: 2rem;
}

.error {
  color: #c00;
  padding: 1rem;
  background: #fee;
  border-radius: 4px;
}

.list {
  list-style: none;
  padding: 0;
}

.list-item {
  padding: 1rem;
  border: 1px solid #eee;
  margin-bottom: 0.5rem;
  border-radius: 4px;
}

.list-item:hover {
  background: #f9f9f9;
}

button {
  padding: 0.5rem 1rem;
  background: #0066cc;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

button:hover {
  background: #0055aa;
}

input, textarea, select {
  padding: 0.5rem;
  border: 1px solid #ddd;
  border-radius: 4px;
  width: 100%;
  max-width: 400px;
}

form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

label {
  font-weight: bold;
}
