# Docker Compose for {{ project_name }}
# Generated by dual-apps v{{ version }}
#
# Usage:
#   docker-compose up        # Development (hot reload)
#   docker-compose up -d     # Detached mode

version: '3.8'

services:
  # PostgreSQL Database
  db:
    image: postgres:16-alpine
    volumes:
      - postgres_data:/var/lib/postgresql/data
    environment:
      POSTGRES_DB: {{ project_name }}_db
      POSTGRES_USER: {{ project_name }}_user
      POSTGRES_PASSWORD: {{ project_name }}_pass
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ project_name }}_user -d {{ project_name }}_db"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Redis Cache
  redis:
    image: redis:7-alpine
    ports:
      - "6379:6379"
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Django Application
  app:
    build:
      context: .
      dockerfile: docker/Dockerfile.app
    command: python manage.py runserver 0.0.0.0:8000
    volumes:
      - .:/app
    ports:
      - "8000:8000"
    environment:
      - DEBUG=True
      - DATABASE_URL=postgres://{{ project_name }}_user:{{ project_name }}_pass@db:5432/{{ project_name }}_db
      - REDIS_URL=redis://redis:6379/0
      - DJANGO_SETTINGS_MODULE={{ project_name }}.settings.dev
    depends_on:
      db:
        condition: service_healthy
      redis:
        condition: service_healthy

{% if celery %}
  # Celery Worker
  celery:
    build:
      context: .
      dockerfile: docker/Dockerfile.app
    command: celery -A {{ project_name }} worker --loglevel=info
    volumes:
      - .:/app
    environment:
      - DATABASE_URL=postgres://{{ project_name }}_user:{{ project_name }}_pass@db:5432/{{ project_name }}_db
      - REDIS_URL=redis://redis:6379/0
      - DJANGO_SETTINGS_MODULE={{ project_name }}.settings.dev
    depends_on:
      - app
      - redis

  # Celery Beat (Scheduler)
  celery-beat:
    build:
      context: .
      dockerfile: docker/Dockerfile.app
    command: celery -A {{ project_name }} beat --loglevel=info
    volumes:
      - .:/app
    environment:
      - DATABASE_URL=postgres://{{ project_name }}_user:{{ project_name }}_pass@db:5432/{{ project_name }}_db
      - REDIS_URL=redis://redis:6379/0
    depends_on:
      - celery
{% endif %}

volumes:
  postgres_data:
