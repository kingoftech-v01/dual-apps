# Dockerfile for Celery Workers - {{ project_name }}
# Generated by dual-apps v{{ version }}

FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

RUN useradd -m -u 1000 celeryuser

COPY requirements/prod.in ./
RUN pip install --no-cache-dir -r prod.in celery redis

COPY --chown=celeryuser:celeryuser . .

USER celeryuser

CMD ["celery", "-A", "{{ project_name }}", "worker", "--loglevel=info"]
