# Docker Compose Development - {{ project_name }}
# Generated by dual-apps v{{ version }}
#
# Usage: docker-compose -f docker-compose.dev.yml up

version: '3.8'

services:
  db:
    image: postgres:16-alpine
    volumes:
      - postgres_dev_data:/var/lib/postgresql/data
    environment:
      POSTGRES_DB: {{ project_name }}_dev
      POSTGRES_USER: dev_user
      POSTGRES_PASSWORD: dev_pass
    ports:
      - "5432:5432"

  redis:
    image: redis:7-alpine
    ports:
      - "6379:6379"

  app:
    build:
      context: .
      dockerfile: docker/Dockerfile.app
    command: python manage.py runserver 0.0.0.0:8000
    volumes:
      - .:/app                           # Hot reload
      - /app/.venv                       # Exclude venv
      - /app/node_modules                # Exclude node_modules
    ports:
      - "8000:8000"
    environment:
      - DEBUG=True
      - DATABASE_URL=postgres://dev_user:dev_pass@db:5432/{{ project_name }}_dev
      - REDIS_URL=redis://redis:6379/0
      - DJANGO_SETTINGS_MODULE={{ project_name }}.settings.dev
    depends_on:
      - db
      - redis

volumes:
  postgres_dev_data:
