# Docker Compose Production - {{ project_name }}
# Generated by dual-apps v{{ version }}
#
# Usage: docker-compose -f docker-compose.prod.yml up -d

version: '3.8'

services:
  # Nginx Reverse Proxy
  nginx:
    image: nginx:1.25-alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./docker/nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - static_volume:/app/staticfiles_collected:ro
      - media_volume:/app/media:ro
    depends_on:
      - app
    restart: always

  # Django Application (Gunicorn)
  app:
    build:
      context: .
      dockerfile: docker/Dockerfile.app
    command: gunicorn {{ project_name }}.wsgi:application --bind 0.0.0.0:8000 --workers 4 --threads 2 --preload
    volumes:
      - static_volume:/app/staticfiles_collected
      - media_volume:/app/media
    environment:
      - DEBUG=False
      - DATABASE_URL=${DATABASE_URL}
      - REDIS_URL=${REDIS_URL}
      - SECRET_KEY=${SECRET_KEY}
      - DJANGO_SETTINGS_MODULE={{ project_name }}.settings.prod
    depends_on:
      - db
      - redis
    restart: always
    read_only: true
    tmpfs:
      - /tmp
    security_opt:
      - no-new-privileges:true

  # PostgreSQL
  db:
    image: postgres:16-alpine
    volumes:
      - postgres_prod_data:/var/lib/postgresql/data
    environment:
      POSTGRES_DB: ${POSTGRES_DB}
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
    restart: always

  # Redis
  redis:
    image: redis:7-alpine
    restart: always

{% if celery %}
  # Celery Worker
  celery:
    build:
      context: .
      dockerfile: docker/Dockerfile.celery
    command: celery -A {{ project_name }} worker --loglevel=info --concurrency=4
    environment:
      - DATABASE_URL=${DATABASE_URL}
      - REDIS_URL=${REDIS_URL}
      - SECRET_KEY=${SECRET_KEY}
    depends_on:
      - app
      - redis
    restart: always
{% endif %}

volumes:
  postgres_prod_data:
  static_volume:
  media_volume:
