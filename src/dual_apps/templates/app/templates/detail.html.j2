{% raw %}{% extends "{% endraw %}{{ app_name }}{% raw %}/base.html" %}
{% load static %}

{% block page_title %}{{ object.title }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-8" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="{% url 'frontend:{% endraw %}{{ app_name }}{% raw %}:{% endraw %}{{ model_name_snake }}{% raw %}_list' %}"
                   class="text-gray-700 hover:text-indigo-600">
                    {% endraw %}{{ model_name_plural }}{% raw %}
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="ml-1 text-gray-500">{{ object.title|truncatechars:30 }}</span>
                </div>
            </li>
        </ol>
    </nav>

    <!-- Main Content -->
    <div class="bg-white shadow overflow-hidden rounded-lg">
        <!-- Header -->
        <div class="px-6 py-5 border-b border-gray-200">
            <div class="flex justify-between items-start">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">{{ object.title }}</h1>
                    <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                            {% if object.status == 'active' %}bg-green-100 text-green-800
                            {% elif object.status == 'draft' %}bg-gray-100 text-gray-800
                            {% else %}bg-red-100 text-red-800{% endif %}">
                            {{ object.get_status_display }}
                        </span>
                        <span>By {{ object.owner.username }}</span>
                        <span>{{ object.created_at|date:"M d, Y" }}</span>
                    </div>
                </div>
                {% if can_edit %}
                <div class="flex space-x-2">
                    <a href="{% url 'frontend:{% endraw %}{{ app_name }}{% raw %}:{% endraw %}{{ model_name_snake }}{% raw %}_edit' pk=object.pk %}"
                       class="inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        Edit
                    </a>
                    <button type="button"
                            hx-post="{% url 'frontend:{% endraw %}{{ app_name }}{% raw %}:{% endraw %}{{ model_name_snake }}{% raw %}_delete' pk=object.pk %}"
                            hx-confirm="Are you sure you want to delete this item?"
                            class="inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50">
                        <svg class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        Delete
                    </button>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Content -->
        <div class="px-6 py-5">
            <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                <div class="sm:col-span-2">
                    <dt class="text-sm font-medium text-gray-500">Description</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        {{ object.description|default:"No description provided"|linebreaks }}
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Status</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ object.get_status_display }}</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Active</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        {% if object.is_active %}
                        <span class="text-green-600">Yes</span>
                        {% else %}
                        <span class="text-red-600">No</span>
                        {% endif %}
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Created</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ object.created_at|date:"F d, Y H:i" }}</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ object.updated_at|date:"F d, Y H:i" }}</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-500">ID</dt>
                    <dd class="mt-1 text-sm text-gray-900 font-mono text-xs">{{ object.id }}</dd>
                </div>
            </dl>
        </div>

        <!-- API Info -->
        <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
            <h3 class="text-sm font-medium text-gray-500 mb-2">API Endpoint</h3>
            <code class="text-xs bg-gray-100 px-2 py-1 rounded">
                GET /api/v1/{% endraw %}{{ app_name }}{% raw %}/{% endraw %}{{ model_name_kebab }}{% raw %}s/{{ object.id }}/
            </code>
        </div>
    </div>

    <!-- Back Link -->
    <div class="mt-6">
        <a href="{% url 'frontend:{% endraw %}{{ app_name }}{% raw %}:{% endraw %}{{ model_name_snake }}{% raw %}_list' %}"
           class="text-indigo-600 hover:text-indigo-500">
            &larr; Back to list
        </a>
    </div>
</div>
{% endblock %}
{% endraw %}