{% raw %}<tr class="hover:bg-gray-50" id="item-{{ object.id }}">
    <td class="px-6 py-4 whitespace-nowrap">
        <div class="flex items-center">
            <div>
                <a href="{% url 'frontend:{% endraw %}{{ app_name }}{% raw %}:{% endraw %}{{ model_name_snake }}{% raw %}_detail' pk=object.pk %}"
                   class="text-sm font-medium text-indigo-600 hover:text-indigo-900">
                    {{ object.title }}
                </a>
                <div class="text-sm text-gray-500 truncate max-w-xs">
                    {{ object.description|truncatechars:50 }}
                </div>
            </div>
        </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
            {% if object.status == 'active' %}bg-green-100 text-green-800
            {% elif object.status == 'draft' %}bg-gray-100 text-gray-800
            {% else %}bg-red-100 text-red-800{% endif %}">
            {{ object.get_status_display }}
        </span>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
        {{ object.owner.username }}
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
        {{ object.created_at|date:"M d, Y" }}
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
        <div class="flex justify-end space-x-2">
            <a href="{% url 'frontend:{% endraw %}{{ app_name }}{% raw %}:{% endraw %}{{ model_name_snake }}{% raw %}_detail' pk=object.pk %}"
               class="text-indigo-600 hover:text-indigo-900">View</a>
            <a href="{% url 'frontend:{% endraw %}{{ app_name }}{% raw %}:{% endraw %}{{ model_name_snake }}{% raw %}_edit' pk=object.pk %}"
               class="text-gray-600 hover:text-gray-900">Edit</a>
            <button type="button"
                    hx-post="{% url 'frontend:{% endraw %}{{ app_name }}{% raw %}:{% endraw %}{{ model_name_snake }}{% raw %}_delete' pk=object.pk %}"
                    hx-confirm="Are you sure?"
                    hx-target="#item-{{ object.id }}"
                    hx-swap="outerHTML"
                    class="text-red-600 hover:text-red-900">
                Delete
            </button>
        </div>
    </td>
</tr>
{% endraw %}