{% raw %}{% extends "{% endraw %}{{ app_name }}{% raw %}/base.html" %}

{% block page_title %}Delete {% endraw %}{{ model_name }}{% raw %}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8 max-w-lg">
    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-5 border-b border-gray-200">
            <h1 class="text-xl font-semibold text-red-600">Confirm Delete</h1>
        </div>

        <div class="px-6 py-5">
            <div class="flex items-center mb-4">
                <div class="flex-shrink-0">
                    <svg class="h-12 w-12 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900">
                        Are you sure you want to delete "{{ object.title }}"?
                    </h3>
                    <p class="mt-1 text-sm text-gray-500">
                        This action cannot be undone. The item will be permanently removed.
                    </p>
                </div>
            </div>

            <form method="post" class="mt-6">
                {% csrf_token %}
                <div class="flex justify-end space-x-3">
                    <a href="{% url 'frontend:{% endraw %}{{ app_name }}{% raw %}:{% endraw %}{{ model_name_snake }}{% raw %}_detail' pk=object.pk %}"
                       class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit"
                            class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700">
                        Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
{% endraw %}